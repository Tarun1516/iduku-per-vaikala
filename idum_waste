        {
            'ip': '185.159.159.110',
            'hostname': 'us-01.protonvpn.net',
            'port': 1195, 'proto': 'udp',
            'ssl_fingerprint': '67:89:...',
            'http_user_agent': 'Mozilla/5.0 (compatible; ProtonVPN)',
            'dns_name_pattern': r'.*protonvpn\.(net|com)',
            'asn_number': 21046,
            'known_vpn_domains': ['us-01.protonvpn.net', 'protonvpn.net'],
        },
    ],
}

